# Backend configuration
ENVIRONMENT=development
API_TITLE=Network Automation API
API_VERSION=0.1.0
API_PREFIX=/api/v1

# Security
SECRET_KEY=changeme-super-secret
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (Supabase Postgres)
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@DB_HOST:5432/DB_NAME

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# SSH / misc
SSH_CONNECT_TIMEOUT=10.0
SSH_COMMAND_TIMEOUT=60.0
SSH_KEEPALIVE_INTERVAL=30.0
SSH_MAX_SESSIONS=32

# Frontend
VITE_API_URL=http://localhost:8000/api/v1
