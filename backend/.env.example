DEBUG=true
SECRET_KEY=change-me
ENCRYPTION_KEY=
DATABASE_URL=sqlite:///db.sqlite3
# For Docker Compose/local Postgres override: postgresql://postgres:postgres@postgres:5432/networkautomation
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=changeme
DJANGO_SUPERUSER_EMAIL=admin@example.com
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# LDAP/Active Directory Authentication
# Set LDAP_ENABLED=true to enable LDAP authentication
LDAP_ENABLED=false
LDAP_SERVER_URI=ldap://ldap.example.com:389
# For LDAPS use: ldaps://ldap.example.com:636
LDAP_START_TLS=false
LDAP_IGNORE_CERT_ERRORS=false

# Bind credentials (leave empty for anonymous bind)
LDAP_BIND_DN=cn=readonly,dc=example,dc=com
LDAP_BIND_PASSWORD=readonly_password

# User search configuration
LDAP_USER_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_USER_SEARCH_FILTER=(sAMAccountName=%(user)s)
# For OpenLDAP use: (uid=%(user)s)
LDAP_USER_SEARCH_SCOPE=SUBTREE

# Alternative: User DN template (use instead of search)
# LDAP_USER_DN_TEMPLATE=uid=%(user)s,ou=users,dc=example,dc=com

# User attribute mapping
LDAP_ATTR_FIRST_NAME=givenName
LDAP_ATTR_LAST_NAME=sn
LDAP_ATTR_EMAIL=mail
# Optional: Customer assignment attribute
# LDAP_ATTR_CUSTOMER=department

# Group search configuration
LDAP_GROUP_SEARCH_BASE=ou=groups,dc=example,dc=com
LDAP_GROUP_SEARCH_FILTER=(objectClass=group)
# For OpenLDAP use: (objectClass=groupOfNames)
LDAP_GROUP_TYPE=ActiveDirectory
# For OpenLDAP use: GroupOfNames

# Role mapping - Map LDAP groups to webnet roles
# Use full DN or separate multiple groups with semicolon
LDAP_GROUP_VIEWER=cn=netops-viewers,ou=groups,dc=example,dc=com
LDAP_GROUP_OPERATOR=cn=netops-operators,ou=groups,dc=example,dc=com;cn=netops-engineers,ou=groups,dc=example,dc=com
LDAP_GROUP_ADMIN=cn=netops-admins,ou=groups,dc=example,dc=com

# LDAP options
LDAP_ALWAYS_UPDATE_USER=true
LDAP_USER_CREATE=true
LDAP_CACHE_TIMEOUT=3600
LDAP_FIND_GROUP_PERMS=true
LDAP_DEBUG_LEVEL=0

# Email/SMTP Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=webnet@example.com
EMAIL_HOST_PASSWORD=smtp_password
DEFAULT_FROM_EMAIL=webnet@example.com
WEBNET_BASE_URL=http://localhost:8000

